<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Signup">

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Signup"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/signupformbutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:text="signup"
        app:layout_constraintTop_toBottomOf="@+id/emailformview"
        tools:layout_editor_absoluteX="190dp" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="32dp"
        android:text="name"
        app:layout_constraintBottom_toBottomOf="@+id/usernameFormView"
        app:layout_constraintEnd_toStartOf="@+id/usernameFormView"
        app:layout_constraintTop_toTopOf="@+id/usernameFormView" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="32dp"
        android:text="password"
        app:layout_constraintBottom_toBottomOf="@+id/passwordformview"
        app:layout_constraintEnd_toStartOf="@+id/passwordformview"
        app:layout_constraintTop_toTopOf="@+id/passwordformview"
        app:layout_constraintVertical_bias="0.461" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="32dp"
        android:text="email"
        app:layout_constraintBottom_toBottomOf="@+id/emailformview"
        app:layout_constraintEnd_toStartOf="@+id/emailformview"
        app:layout_constraintTop_toTopOf="@+id/emailformview"
        app:layout_constraintVertical_bias="0.538" />

    <EditText
        android:id="@+id/passwordformview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:ems="10"
        android:inputType="textPassword"
        app:layout_constraintStart_toStartOf="@+id/usernameFormView"
        app:layout_constraintTop_toBottomOf="@+id/usernameFormView" />

    <EditText
        android:id="@+id/usernameFormView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="username"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.756"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <EditText
        android:id="@+id/emailformview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:ems="10"
        android:inputType="textEmailAddress"
        app:layout_constraintStart_toStartOf="@+id/passwordformview"
        app:layout_constraintTop_toBottomOf="@+id/passwordformview" />
</androidx.constraintlayout.widget.ConstraintLayout>