<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:id="@+id/orderFormConstraintLayout"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  tools:context=".activity.OrderFormActivity">

  <TextView
    android:id="@+id/orderFormTextView"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginStart="160dp"
    android:layout_marginTop="116dp"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    tools:text="Product name here" />

  <TextView
    android:id="@+id/textView"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginEnd="28dp"
    android:text="@string/product_name"
    app:layout_constraintEnd_toStartOf="@+id/orderFormTextView"
    app:layout_constraintTop_toTopOf="@+id/orderFormTextView" />
</androidx.constraintlayout.widget.ConstraintLayout>
